{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "dist",
    "allowJs": true,
    "target": "ES2020",
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowUnreachableCode": false,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ],
    "types": ["node"],
    "lib": [
      "es2020",
      "ESNext.String",
      "dom"
    ],
    "sourceMap": true,
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "*/**/*.*", "custom.d.ts"
  ],
  "exclude": ["node_modules"]
}
